<div class="container">
 <div class="set_center_outer">
   <h2>新規登録画面</h2>
   <h4>こちらはお客様の新規登録画面になります</h4>

   <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>

     <div class="field">
          <p>氏名</p>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "姓" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "名"%>
     </div>

     <div class="field">
          <p>フリガナ</p>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "姓" %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "名" %>
     </div>

      <div class="field">
      <%= f.label :email,"メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
  
      <div class="field">
      <%= f.label :password,"パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上の英数字を入力してください)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
  
      <div class="field">
      <%= f.label :password_confirmation,"パスワード(確認用)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
  
      <div class="field">
      <%= f.label :postal_code,"郵便番号" %><br />
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
  
      <div class="field">
      <%= f.label :address,"住所" %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
  
      <div class="field">
      <%= f.label :telephone_number,"電話番号" %><br />
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
      </div>


      <div class="actions">
      <%= f.submit "登録する", class: 'btn btn-success' %>
      </div>
     <% end %>
   </div>
  </div>