<div class="cover-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-3">会員情報編集画面</h1>
    </div>
      <div class="row justify-content-center">
        <div class="one-post">
          <%= form_with model: @customer, url: public_customer_path(@customer.id) do |f| %>
          
            <div class="field">
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </div>
          
            <div class="field">
              <%= f.label :first_name %><br />
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>
          
            <div class="field">
              <%= f.label :last_name_kana %><br />
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
            </div>
          
            <div class="field">
              <%= f.label :first_name_kana %><br />
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </div>
          
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          
            <div class="field">
              <%= f.label :postal_code %><br />
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </div>
          
            <div class="field">
              <%= f.label :address %><br />
              <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
            </div>
          
            <div class="field">
              <%= f.label :telephone_number %><br />
              <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
            </div>
          
            <div class="actions">
              <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
              <%= link_to "退会する",  public_customers_check_path, class: "btn btn-warning mr-1" %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>