<div class="cover-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-3">予約内容確認画面</h1>
    </div>
    <div class="row justify-content-center">
      <div class="one-post">
<dl>
	<dt>予約店舗名</dt>
	<dd><%= @reservation.name %></dd>
	<dt>郵便番号</dt>
	<dd><%= @reservation.postal_code %></dd>
	<dt>住所</dt>
	<dd><%= @reservation.address %></dd>
	<dt>商品名</dt>
	<dd><%= @reservation.item.name %></dd>
	<dt>商品説明</dt>
	<dd><%= @reservation.item.introduction %></dd>
	<dt>価格</dt>
	<dd><%= @reservation.item.price %></dd>
</dl>

<%= form_for @reservation, method: :post, url: public_item_reservations_path(item_id: @item.id) do |form| %>
	<%= form.hidden_field :name %>
	<%= form.hidden_field :postal_code %>
	<%= form.hidden_field :address %>
	<%= form.submit '入力画面に戻る', name: "back_to_new", class: 'btn btn-primary' %>
	<%= form.submit '送信する', class: 'btn btn-success'%>
<% end %>
</div>
      </div>
  </div>
</div>
