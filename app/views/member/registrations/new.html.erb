<div class="container">
 <div class="set_center_outer">
   <h2>新規登録画面</h2>
   <h4>こちらは店舗様の新規登録画面になります</h4>

   <%= form_with model: @member, url: member_registration_path, id: 'new_member', class: 'new_member' do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
    <%= f.label :name,"名前(店舗名)" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
    <%= f.label :name_kana,"ふりがな" %><br />
    <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana" %>
    </div>

    <div class="field">
    <%= f.label :email,"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
    <%= f.label :password,"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上の英数字を入力してください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
    <%= f.label :password_confirmation,"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
    <%= f.label :postal_code,"郵便番号" %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>

    <div class="field">
    <%= f.label :address,"住所" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>

    <div class="field">
    <%= f.label :telephone_number,"電話番号" %><br />
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>


    <div class="actions">
    <%= f.submit "登録する" %>
    </div>
   <% end %>
 </div>
</div>