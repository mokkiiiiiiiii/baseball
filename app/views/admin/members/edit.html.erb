<h2>会員情報編集</h2>
<div class="cover-index">
  <div class="container">
    <div class="row justify-content-center">
      <div class="one-post">
       <%= form_with model: @member, url: admin_member_path(@member.id) do |f| %>

        <div class="field">
          <p>名前(店舗名)</p>
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="field">
          <p>ふりがな</p>
            <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana" %>
        </div>
        <div class="field">
          <p>郵便番号</p>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
        <div class="field">
          <p>住所</p>
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
        <div class="field">
         <p>電話番号</p>
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>
        <div class="field">
          <p>メールアドレス</p>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <p>会員ステータス</p>
            <%= f.radio_button :is_deleted,false%>
            <%= f.label :is_deleted, "有効" %>
      
            <%= f.radio_button :is_deleted,true %>
            <%= f.label :is_deleted, "退会" %>
        </div>
        <div class="actions">
            <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
        </div>
       <% end %>
      </div>
    </div>
  </div>
</div>